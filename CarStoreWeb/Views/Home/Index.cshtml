@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="Tesla CyberTruck" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Discover the exciting new CyberTruck! Order today!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="BMW M4" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    We have cars for everyone
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" alt="Ferrari Roma" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    More cars available than any other retailer
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" alt="Aston Martin DB11" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Find your perfect match 
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-5">
		<h2>Welcome to Cars Unlimited</h2>
            <p>Please use the <b>"Shop"</b> option to start browsing.</p>
            <p>Once you are ready to place your order, click <b>"Cart"</b>, and send us your order</p>
            <p>We will confirm your order over e-mail as soon as we receive it.</p>
    </div>
    <div class="col-md-5">
		<h3>More about this website...</h3>
        <p>This is a demo site created to showcase Docker container and deploying to Azure resources from Azure DevOps.</p>
		<p>E-Mail services are provided by non-code services.</p>
    </div>
</div>
